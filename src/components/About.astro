---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  title: string;
  photo?: ImageMetadata | string;
  Content: any;
  link?: string;
}

const { title, photo, Content, link } = Astro.props;
---

<section id="about" class="py-20 px-4">
  <div class="max-w-4xl mx-auto">
    <div class="card bg-base-200 shadow-sm">
      <div class="flex flex-col md:flex-row">
        {
          photo && (
            <figure class="shrink-0 md:w-56 overflow-hidden rounded-t-2xl md:rounded-t-none md:rounded-l-2xl">
              {typeof photo === "string" ? (
                <img src={photo} alt={title} class="w-full h-64 md:h-full object-cover" />
              ) : (
                <Image src={photo} alt={title} class="w-full h-64 md:h-full object-cover" width={300} height={400} />
              )}
            </figure>
          )
        }
        <div class="card-body">
          <h2 class="card-title text-2xl">{title}</h2>
          <article
            class="prose prose-sm max-w-none prose-a:text-primary prose-a:underline prose-a:hover:opacity-80"
          >
            <Content />
          </article>
        </div>
      </div>
    </div>
  </div>
</section>
